<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号:" />

    <TextView
        android:id="@+id/tv_gcd_bh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.3543045" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="位置:" />

    <TextView
        android:id="@+id/tv_gcd_wz_jd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="131231" />

    <TextView
        android:id="@+id/tv_gcd_wz_wd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="10.3543045" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_tb_gcd_pz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gcd_pz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_tb_gcd_pz" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tb_gcd_tpck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gcd_tpck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_tb_gcd_tpck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tb_gcd_dw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gcd_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_tb_gcd_dw" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tb_gcd_sc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gcd_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_tb_gcd_sc" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>