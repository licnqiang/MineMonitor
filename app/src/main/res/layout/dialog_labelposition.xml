<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_shape_rect_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:text="请选择标注位置"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray_9" />

    <RadioGroup
        android:id="@+id/rg_labelpos_pr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_horizontal"
            style="@style/dialog_radio_text_style"
            android:checked="true"
            android:text="水平" />


        <RadioButton
            android:id="@+id/rb_vertical"
            style="@style/dialog_radio_text_style"
            android:text="垂直" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_labelpos_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_shuiping"
            style="@style/dialog_radio_text_style"
            android:checked="true"
            android:text="水平" />


        <RadioButton
            android:id="@+id/rb_chuizhi"
            style="@style/dialog_radio_text_style"
            android:text="垂直" />

        <RadioButton
            android:id="@+id/rb_yxpx"
            style="@style/dialog_radio_text_style"
            android:text="沿线平行" />


        <RadioButton
            android:id="@+id/rb_yxwq"
            style="@style/dialog_radio_text_style"
            android:text="沿线弯曲" />
    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray_9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_blue_button"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_button_background"
            android:text="@string/dialog_cancel" />

        <Button
            android:id="@+id/confirm_button"
            style="@style/dialog_blue_button"
            android:text="@string/dialog_ok" />
    </LinearLayout>
</LinearLayout>