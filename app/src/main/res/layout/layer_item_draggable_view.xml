<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_gray_selector"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_layer_visibility"
        android:layout_width="47px"
        android:layout_height="33px"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_eye_on" />

    <TextView
        android:id="@+id/tv_layer_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="图层一"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2"
        android:gravity="center">

        <cn.piesat.minemonitor.mapdata.widget.PointShapeView
            android:id="@+id/shape_view"
            android:layout_width="150px"
            android:layout_height="55px"
            android:layout_gravity="center"
            app:solid_color="@color/colorAccent"
            app:stroke_color="@android:color/holo_blue_bright" />

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:background="@color/darkblue"
            android:visibility="gone" />

        <ImageView
            android:layout_width="150px"
            android:layout_height="5px"
            android:background="@color/darkblue"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_layer_up"
        android:layout_width="38px"
        android:layout_height="50px"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_arrow_up"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_layer_down"
        android:layout_width="38px"
        android:layout_height="50px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_arrow_down"
        android:visibility="gone" />
</LinearLayout>