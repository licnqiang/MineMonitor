<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lh2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bankground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="cn.piesat.minemonitor.MainActivity">

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="50dp"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:text="内蒙古矿山地质环境遥感检测野外验证"-->
    <!--android:textSize="30sp"-->
    <!--android:textStyle="bold" />-->



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="120dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/user" />

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/user_edit"
                        android:digits="@string/filter_vcode"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/lock" />
                    <!--
                                    <EditText
                                        android:id="@+id/et_password"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1.5"
                                        android:background="@drawable/login_editer"
                                        android:digits="@string/filter_vcode"
                                        android:paddingLeft="5dp"
                                        android:password="true"
                                        android:singleLine="true" />-->
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/user_edit"
                        android:digits="@string/filter_vcode"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <cn.piesat.minemonitor.util.DrawableSwitch
                        android:id="@+id/ds_all_clean"
                        android:layout_width="50dp"
                        android:layout_height="30dp"

                        android:layout_marginTop="10dp"
                        lh2:circleColor="#F9F9F9"
                        lh2:isSwitchOn="false"
                        lh2:radius="10dp"
                        lh2:switchOffColor="#D8D8D8"
                        lh2:switchOnColor="#00ff66"
                        lh2:textColor="#1C1C0F" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="记住密码"
                        android:textSize="20sp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:id="@+id/tv_registered"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="切换数据"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/bg_report_commit_selector"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

</LinearLayout>

